    <header>
        <img id="burger-image" src="/assets/img/burger.png" alt="Burger">
        <h1>Eat-Da-Burger</h1>
    </header>

    <div class="row all-burgers">
        
        <div class="not-eaten-container col-6">
            <h2>Not eaten</h2>
            {{#each burgers}}
             {{#unless this.devoured}}
              <p>{{this.burger_name}}<span><button data-id="{{this.id}}" class="devour-button btn btn-secondary">Devour!</button></span></p>
             {{/unless}}
            {{/each}}

        </div>
        
        <div class="eaten-container col-6">
            <h2>Eaten</h2>
            {{#each burgers}}
             {{#if this.devoured}}
              <p>{{this.burger_name}}</p>
             {{/if}}
            {{/each}}

        </div>
        
    </div>
        
    <div class="row">
        <div class="add-container">
            <h2>Add a burger</h2>
            <form class="create-form">
                
                <div class="form-group">
                    <label for="ca">Burger name:</label>
                    <input id="burger-name-input" type="text" id="ca" name="name">
                </div>
                
                <button type="submit" class="btn btn-secondary">Add burger</button>
            </form>
            
        </div>
    </div>